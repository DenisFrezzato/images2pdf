{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src/**/*",
    "bin/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
